{
  "name": "@farfarawaylabs/react-native-beautiful-ui",
  "version": "0.3.0",
  "description": "Beauitful UI for React Native projects",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "farfarawaylabs-react-native-beautiful-ui.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "node -e \"process.exit(require('os').platform() !== 'darwin')\" && test -d example/ios && cd example/ios && pod install || printf ''",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/farfarawaylabs/react-native-beautiful-ui",
  "author": "Shahar Nechmad <shahar@farfarawaylabs.com> (https://www.farfarawaylabs.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/farfarawaylabs/react-native-beautiful-ui/issues"
  },
  "homepage": "https://github.com/farfarawaylabs/react-native-beautiful-ui#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.14.0",
    "@react-native-community/eslint-config": "^1.1.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.7",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "react": "~16.9.0",
    "react-native": "~0.61.5",
    "react-native-elements": "^2.0.0",
    "release-it": "^13.5.8",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@react-native-community/blur": "^3.6.0",
    "react": "*",
    "react-native": "*",
    "react-native-elements": "^2.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "@farfarawaylabs/react-native-hooks": "^0.1.0",
    "@farfarawaylabs/react-native-layout": "^1.0.1",
    "@react-native-community/blur": "^3.6.0"
  }
}
